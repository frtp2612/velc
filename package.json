{
	"name": "velct-components",
	"type": "module",
	"private": false,
	"version": "0.0.9",
	"main": "dist/velct-components.umd.cjs",
	"module": "dist/velct-components.js",
	"author": "Paolo Forti",
	"description": "",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/velct-components.js",
			"require": "./dist/velct-components.umd.cjs"
		},
		"./dist/styles.css": {
			"import": "./dist/styles.css",
			"require": "./dist/styles.css"
		}
	},
	"types": "./dist/index.d.ts",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc && vite build && npm run build:styles",
		"preview": "vite preview",
		"build:lib": "vue-tsc && vite build --target lib --name velct-components src/index.ts",
		"build:styles": "postcss src/style/tailwind.css -o dist/styles.css"
	},
	"dependencies": {
		"@vueuse/core": "^10.5.0",
		"path": "^0.12.7",
		"vite-plugin-dts": "^3.6.0",
		"vue": "^3.3.4",
		"vue-router": "^4.2.5",
		"vue-typed-virtual-list": "^1.0.10"
	},
	"devDependencies": {
		"@types/node": "^20.8.6",
		"@vitejs/plugin-vue": "^4.2.3",
		"autoprefixer": "^10.4.16",
		"postcss": "^8.4.31",
		"postcss-cli": "^10.1.0",
		"tailwindcss": "^3.3.3",
		"typescript": "^5.0.2",
		"vite": "^4.4.5",
		"vue-tsc": "^1.8.5"
	},
	"peerDependencies": {
		"vue": "^3.3.4"
	}
